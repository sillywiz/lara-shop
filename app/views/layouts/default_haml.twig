{% haml %}
!!!
%html
  %head
    %title = title | default("My Title")
    %base(href="/")
    != HTML.style("/assets/css/main.min.css")
    != HTML.script("/assets/vendor/js/angular.min.js")
    %script(src="https://code.angularjs.org/1.3.8/angular-resource.min.js")
    %script(src="https://code.angularjs.org/1.3.8/angular-route.min.js")
    %script(src="https://code.angularjs.org/1.3.8/angular-sanitize.min.js")
    %script(src="http://angular-ui.github.io/ui-router/release/angular-ui-router.min.js")
    != HTML.script("/assets/js/main.js")

  %body(ng-app="app")
    #container
      #header
        != HTML.link('/', 'Make It Snappy Q&A')
      #nav
        %ul
          %li
            != HTML.link('/home', 'Home')
          %li
            != HTML.link('/register', 'Register')
          %li
            != HTML.link('/login', 'Login')

      #content
        %div(ui-view)
          - block content ''

      #footer
        &copy; Make It Snappy Q&A #{ date('Y')|date('Y') }
  :javascript
    angular.module("app").constant("CSRF_TOKEN", '#{ csrf_token()}');